---
import Layout from "../layouts/Layout.astro";

interface Pokemon {
    id: string;
    name: string;
    image: string;
}
const fetchingCharater = async () => {
    const response = await fetch("https://pokeapi.co/api/v2/pokemon?limit=151");
    if (!response.ok) {
        throw new Error("Error al obtener los characteres");
    }
    const data = await response.json();

    // Aquí recorremos todos los Pokémon y hacemos una petición para obtener el sprite
    const pokemons = await Promise.all(
        data.results.map(async (poke: { name: string; url: string }) => {
            const res = await fetch(poke.url);
            const details = await res.json();
            return {
                id: details.id,
                name: details.name,
                image: details.sprites.front_default,
            };
        }),
    );

    return pokemons;
};
const pokemon = await fetchingCharater();
---

<Layout>
    <header class="font-sans max-md:text-center max-md:mt-5">
        <div class="max-md:ml-[-110px] max-md:text-xl">
            <h1
                class="text-green-300 font-extrabold font-sans max-w-screen-lg mt-10 text-2xl max-md:mr-80 max-md:whitespace-nowrap"
            >
                PokeApi
            </h1>
            <p
                class="font-mono mt-5 text-gray-300 max-md:ml-[-70px] max-md:text-2xl max-md:whitespace-nowrap"
            >
                Elije tu pokemon favorito!
            </p>
        </div>
    </header>
    <section
        class="flex flex-row h-[120vh] max-md:h-auto max-md:flex-col max-md:items-center max-md:justify-start"
    >
        <!-- Lista de Pokémons -->
        <div
            class="border border-black w-full h-[550px] overflow-y-scroll mb-10 bg-black mt-10 rounded-2xl shadow-2xl"
        >
            <ul
                class="mt-10 pb-10 grid grid-cols-1 gap-y-5 px-5 max-md:flex max-md:flex-col items-center"
            >
                {
                    pokemon.map((poke: Pokemon) => (
                        <li
                            id="list-pokemon"
                            data-key={poke.id}
                            class="w-[300px] border border-black p-5 rounded-2xl bg-gray-300 font-bold hover:scale-105 transition duration-300"
                        >
                            <div>
                                <img src={poke.image} alt={poke.name} />
                                <p class="text-center mt-2">{poke.name}</p>
                                <div class="text-white bg-blue-700 mt-5 rounded-md p-2 cursor-pointer hover:bg-blue-500 transition duration-300 text-center">
                                    <button
                                        class="btn-agregar w-full"
                                        data-id={poke.id}
                                        data-name={poke.name}
                                        data-img={poke.image}
                                    >
                                        Agregar Pokémon
                                    </button>
                                </div>
                            </div>
                        </li>
                    ))
                }
            </ul>
        </div>

        <!-- Carrito / Seleccionados -->
        <div
            class="mt-10 mb-[20px] ml-30 w-[100%] h-[20vh] max-md:ml-[-170px] max-md:w-[220px]"
        >
            <div
                id="contenedor-seleccion"
                class="contenedor-seleccion w-[390px] h-[500px] bg-blue-200 border-2 border-dotted p-4 overflow-x-scroll overflow-y-hidden flex flex-col flex-wrap max-md:w-[550px] max-md:overflow-x-scroll rounded-2xl max-md:ml-[-80px] max-md:mt-[-20px] max-md:gap-x-5"
            >
                <!-- Contenido dinámico con JS -->
            </div>
            <div class="mt-5 max-md:mt-10 max-md:ml-[-75px] text-start">
                <span
                    id="totalCharacters"
                    class="text-xl font-bold font-mono text-yellow-300"
                >
                    Pokémons: 0
                </span>
                <div
                    class="bg-blue-600 rounded-xl w-[80%] px-20 py-2 text-center"
                >
                    <button id="pagar" class="p-2 font-bold font-mono"
                        >Pagar</button
                    >
                </div>
            </div>
        </div>
    </section>
</Layout>
<script>
    interface PokemonData {
        id: number;
        name: string;
        image: string;
    }

    const contenedor = document.getElementById("contenedor-seleccion")!;

    const updateTotal = () => {
        const totalElements = document.querySelector("#totalCharacters")!;
        const charactersOnly = contenedor.querySelectorAll("div[data-id]");
        totalElements.textContent = `Pokémons: ${charactersOnly.length}`;
    };

    const loadFromLocalStorage = () => {
        const PokemonList = JSON.parse(
            localStorage.getItem("PokemonList") || "[]",
        );
        contenedor.innerHTML = "";

        if (PokemonList.length === 0) {
            contenedor.innerHTML = `
            <p class='text-black text-2xl text-center mt-10 font-mono max-md:ml-10'>Añade tu personaje al carrito</p>
            <img class='carritoSvg w-24 mx-auto mt-4 relative right-2' src='/carrito.svg'/>
        `;
        } else {
            PokemonList.forEach((poke: any) => {
                const nuevo = document.createElement("div");
                nuevo.className =
                    "border p-2 mb-2 mt-1 rounded bg-white h-[800px] max-md:ml-[-3px] max-md:w-[270px] max-md:h-[60vh]";
                nuevo.dataset.id = poke.id;

                nuevo.innerHTML = `
                <img src='/delete.svg' class="btn-eliminar bg-red-400 text-white rounded-md p-1 mb-2 ml-75 max-md:ml-[210px] cursor-pointer"/>
                <img src="${poke.image}" alt="${poke.name}" class="w-full h-[200px] object-contain rounded mt-5" />
                <p class="text-center font-semibold mt-2">${poke.name}</p>
            `;
                contenedor.appendChild(nuevo);
            });
        }
        updateTotal();
    };

    loadFromLocalStorage();

    document.body.addEventListener("click", (e) => {
        const target = e.target! as HTMLElement;

        if (target.classList.contains("btn-agregar")) {
            const id = target.dataset.id;
            const name = target.dataset.name;
            const image = target.dataset.img;

            if (!contenedor.querySelector(`[data-id="${id}"]`)) {
                const nuevo = document.createElement("div");
                nuevo.className =
                    "border p-2 mb-2 mt-1 rounded bg-white h-[800px] max-md:ml-[-3px] max-md:w-[270px] max-md:h-[60vh]";
                nuevo.dataset.id = id;

                nuevo.innerHTML = `
                <img src='/delete.svg' class="btn-eliminar bg-red-400 text-white rounded-md p-1 mb-2 ml-75 max-md:ml-[210px] cursor-pointer"/>
                <img src="${image}" alt="${name}" class="w-full h-[200px] object-contain rounded mt-5" />
                <p class="text-center font-semibold mt-2">${name}</p>
            `;
                contenedor.appendChild(nuevo);

                const msg = contenedor.querySelector("p.text-2xl");
                const svg = contenedor.querySelector(".carritoSvg");
                msg?.remove();
                svg?.remove();

                const PokemonList = JSON.parse(
                    localStorage.getItem("PokemonList") || "[]",
                );
                PokemonList.push({ id, name, image });
                localStorage.setItem(
                    "PokemonList",
                    JSON.stringify(PokemonList),
                );

                updateTotal();
            }
        }

        if (target.classList.contains("btn-eliminar")) {
            const div = target.closest("div[data-id]") as HTMLElement;
            const id = div.dataset.id;
            div.remove();

            let PokemonList = JSON.parse(
                localStorage.getItem("PokemonList") || "[]",
            );
            PokemonList = PokemonList.filter(
                (poke: any) => poke.id.toString() !== id,
            );
            localStorage.setItem("PokemonList", JSON.stringify(PokemonList));

            if (contenedor.children.length === 0) {
                contenedor.innerHTML = `
                <p class='text-black text-2xl text-center mt-10 font-mono max-md:ml-10'>Añade tu personaje al carrito</p>
                <img class='carritoSvg w-24 mx-auto mt-4 relativo right-2' src='/carrito.svg'/>
            `;
            }

            updateTotal();
        }
    });
</script>
<style>
    .contenedor-seleccion {
        box-shadow: 25px 25px 10px rgba(0, 0, 0, 0.333);
        transition: all 0.5s ease-in-out;
    }
    .contenedor-seleccion:hover {
        transform: translateY(-20px);
        box-shadow: 35px 35px 20px rgba(0, 0, 0, 0.333);
    }
</style>
